@{
  Layout = "_Layout";
}

<div class="container">
  <h1>List of students: </h1>

  @if(Model.Count == 0)
  {
    <p>No students has been added yet</p>
  }
  else
  {
  <ul>
  @foreach(var student in Model)
  {
    <li><a href='/students/@student.GetId()'>@student.GetName()</a></li>
  }
  </ul>
  }

</div>
